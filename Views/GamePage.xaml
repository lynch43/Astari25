<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Astari25.ViewModels"
             x:Class="Astari25.Views.GamePage"
             Title="*Astari*">

    <ContentPage.BindingContext>
        <vm:GamePageViewModel/>
    </ContentPage.BindingContext>
    <Grid>
        <GraphicsView x:Name="GameCanvas"
                      Drawable="{Binding GameDrawable}"
                      HeightRequest="600"
                      WidthRequest="600"
                      BackgroundColor="Black"/>
        
        <Grid RowDefinitions="Auto, Auto,Auto"
              ColumnDefinitions="Auto,Auto,Auto"
              VerticalOptions="End"
              HorizontalOptions="Center"
              RowSpacing="10"
              ColumnSpacing="10"
              Margin="10">

            <Button Text="↑"
                    Grid.Row="0" 
                    Grid.Column="1"
                    FontSize="50"
                    WidthRequest="80"
                    HeightRequest="80"
                    Clicked="OnUpClicked"/>
            <Button Text="←" 
                    Grid.Row="1"
                    Grid.Column="0" 
                    Clicked="OnLeftClicked"
                    FontSize="50"
                    WidthRequest="80"
                    HeightRequest="70"/>
            <Button Text="→"
                    Grid.Row="1"
                    Grid.Column="2"
                    Clicked="OnRightClicked"
                    FontSize="50"
                    WidthRequest="80"
                    HeightRequest="80"/>
            <Button Text="↓"
                    Grid.Row="2"
                    Grid.Column="1"
                    Clicked="OnDownClicked"
                    FontSize="50"
                    WidthRequest="80"
                    HeightRequest="80"/>
        </Grid>
    </Grid>
</ContentPage>