<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Astari25.ViewModels"
             x:Class="Astari25.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="Black">
    <ContentPage.BindingContext>
        <vm:SettingsViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="16" Spacing="18">
        <Label Text="Settings" FontSize="28" TextColor="White" HorizontalOptions="Center"/>

        <HorizontalStackLayout Spacing="12">
            <Label Text="Difficulty" TextColor="White" VerticalOptions="Center"/>
            <Picker Title="Select" SelectedItem="{Binding Settings.Difficulty}">
                <Picker.Items>
                    <x:String>Easy</x:String>
                    <x:String>Normal</x:String>
                    <x:String>Hard</x:String>
                </Picker.Items>
            </Picker>
        </HorizontalStackLayout>

        <Button Text="Save"   Command="{Binding SaveCommand}"   BackgroundColor="#444" TextColor="White"/>
        <Button Text="Reload" Command="{Binding ReloadCommand}" BackgroundColor="#333" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>