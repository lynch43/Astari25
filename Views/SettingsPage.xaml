<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Astari25.ViewModels"
             x:Class="Astari25.Views.SettingsPage">

    <ContentPage.BindingContext>
        <vm:SettingsViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Image Source="space_bg.jpg" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill" InputTransparent="True"/>
        <BoxView Color="Black" Opacity="0.7" HorizontalOptions="Fill" VerticalOptions="Fill"/>

        <Grid Padding="24">
            <VerticalStackLayout Spacing="22"
                           Padding="24"
                           BackgroundColor="Black"
                           Opacity="0.85"
                           HorizontalOptions="Center"
                           WidthRequest="420">
                <Label Text="Settings" FontSize="44" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>

                <Label Text="Difficulty" FontSize="20" TextColor="White"/>

                <Picker Title="Select"
                FontSize="20"
                HeightRequest="56"
                BackgroundColor="DimGray"
                TextColor="White"
                TitleColor="White"
                SelectedItem="{Binding Settings.Difficulty}">
                    <Picker.Items>
                        <x:String>Easy</x:String>
                        <x:String>Normal</x:String>
                        <x:String>Hard</x:String>
                    </Picker.Items>
                </Picker>

                <Button Text="Save" Command="{Binding SaveCommand}" HeightRequest="56" BackgroundColor="Purple" TextColor="White"/>
                <Button Text="Reload" Command="{Binding ReloadCommand}" HeightRequest="56" BackgroundColor="Gray" TextColor="White"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>